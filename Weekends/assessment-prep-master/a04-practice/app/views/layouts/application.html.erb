<!DOCTYPE html>
<html>
<head>
  <title>Links</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div>
    <% if !!current_user %>
      Hi <%= current_user.username %>
      <%= button_to "Sign Out", session_url, :method => :delete %>
    <% else %>
      <%= button_to "#", new_session_url %>
      <%= button_to "#", new_user_url %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
